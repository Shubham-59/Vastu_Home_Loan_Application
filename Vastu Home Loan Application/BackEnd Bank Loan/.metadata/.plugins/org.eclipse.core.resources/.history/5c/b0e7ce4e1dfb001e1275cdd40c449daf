package com.vashtu.app.model;

import java.sql.Date;

import org.springframework.web.bind.annotation.RestController;

import com.vashtu.app.enums.Status;

import jakarta.persistence.CascadeType;
import jakarta.persistence.Entity;
import jakarta.persistence.EnumType;
import jakarta.persistence.Enumerated;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.OneToOne;

import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;


@Data
@NoArgsConstructor
@AllArgsConstructor
@Entity
public class Customer {

	
	    @Id
	    @GeneratedValue(strategy = GenerationType.IDENTITY)
	    private int customerId;
	    private String firstName;
	    private Date dateOfBirth;
	    private int age;
	    private String customerGender;
	    private String email;
	    private String mobileNumber;
	    private String panCard;
	    private int cibilScore;
	    private Long adharCard;
	    private String customerAdditionalMobileNumber;
	    private double customerAmountPaidForHome;
	    private double requestedLoanAmount;
	    private int requireTenure;
//	    @OneToOne(cascade=CascadeType.ALL)
//	    private Enquiry enquiry;
//	    
	    @OneToOne(cascade=CascadeType.ALL)
	    private EducationalInfo educationalInfo;
	    @OneToOne(cascade = CascadeType.ALL)
	    private AllPersonalDocuments allPersonalDocuments;
	    @OneToOne(cascade = CascadeType.ALL)
	    private FamilyDependentInformation familyDependentInformation;
	    @OneToOne(cascade=CascadeType.ALL)
	    private CustomerAddress customerAddress;
	    @OneToOne(cascade=CascadeType.ALL)
	    private MortageDetails mortagedetails;
	    @OneToOne(cascade = CascadeType.ALL)
	    private Profession profession;
	    
	    @Enumerated(EnumType.STRING)
	    private Status status;
	    @OneToOne(cascade = CascadeType.ALL)
	    private AccountDetails accountDetails;
	    @OneToOne(cascade=CascadeType.ALL)
	    private GaurantorDetails  gaurantorDetails;
	
}
